{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2019",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "pretty": true,
    "incremental": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true
  },
  "exclude": ["node_modules/", "docs/", ".config/", ".assets/"],
  "include": ["src/**/*.json", "src/**/*.ts", "src/**/*.yml", "src/**/*.yaml"]
}
